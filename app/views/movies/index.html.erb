<main>
<% if  @movies != nil %>
  <section class="featured-movies">
    <h2>Movies</h2>
    <div class="movie-grid margin">
    <% @movies.each do |movie| %>
      <div class="movie"> 
       <a href="/movies/<%= movie.id %>">
        <%=image_tag movie.image ,class: "style_image"  if movie.image.attached? %> 
        </a>
        <h5 class="card-title">Movie : <%=movie.name%></h5>
        <h6><p class="card-text">Type :<%= movie.category.name %></p></h6>
        <% if movie.rating  != nil %>
        <h6><p class="card-text">Rating :<%=movie.rating%><span class="fa fa-star checked"></p></h6>
       <% end %>
        <h6><p class="card-text">Released_on :<%=movie.released_on%></p></h6>
      </div>
    <% end %>
    </div>
     <% end %>
  </section>
  
</main>

