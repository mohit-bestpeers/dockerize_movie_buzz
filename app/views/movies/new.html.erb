<h1>New Movie</h1>

<%= form_with model: @movie do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @movie.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id]})%>
  </div>

  <div>
  <%= form.label :description %><br>
  <%= form.text_area :description %><br>
  <% @movie.errors.full_messages_for(:description).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>
  
  <div>
  <%= form.label :director %><br>
  <%= form.text_field :director %><br>
  <% @movie.errors.full_messages_for(:director).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>
  <%= form.file_field :image %>
  <div>
  <%= form.label :released_on%><br>
  <%= form.date_field :released_on %><br>
  <% @movie.errors.full_messages_for(:released_on).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>

